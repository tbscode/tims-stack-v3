FROM node:18-alpine

ARG NEXT_PUBLIC_WS_PATH
ENV _NEXT_PUBLIC_WS_PATH $NEXT_PUBLIC_WS_PATH

ARG WS_PATH_ANDROID
ENV _WS_PATH_ANDROID $WS_PATH_ANDROID

ARG HOST_WEB
ENV _HOST_WEB $HOST_WEB

ARG HOST_ANDROID
ENV _HOST_ANDROID $HOST_ANDROID

WORKDIR /frontend
COPY . .

RUN apk add curl

RUN npm i

ENTRYPOINT ["npm", "run", "dev"]
